# === CIPFARO E-Learning - Configuration Production Locale ===
# Configuration pour déploiement Docker local

# === Environment ===
NODE_ENV=production
JWT_SECRET=votre-secret-jwt-super-securise-pour-production-123456789

# === Database (PostgreSQL avec Docker) ===
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/cipfaro_production?schema=public
DB_HOST=postgres
DB_PORT=5432
DB_NAME=cipfaro_production
DB_USER=postgres
DB_PASSWORD=postgres123

# === Redis avec Docker ===
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# === MinIO (Stockage local avec Docker) ===
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=cipfaro-admin
S3_SECRET_KEY=cipfaro-secret-key-123
S3_BUCKET=cipfaro-scorm
S3_REGION=us-east-1
S3_SSL=false

# === API Production ===
API_PORT=3001
CORS_ORIGIN=http://localhost:3000

# === Web (Next.js) Production ===
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXTAUTH_SECRET=nextauth-secret-production-123456789
NEXTAUTH_URL=http://localhost:3000

# === Monitoring & Logs ===
LOG_LEVEL=info
SENTRY_DSN=

# === Email (Configuration locale - optionnel) ===
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@cipfaro-local.com

# === Analytics ===
GOOGLE_ANALYTICS_ID=

# === Security ===
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# === Performance ===
MAX_FILE_SIZE=10485760
COMPRESSION_THRESHOLD=1024

# === Docker specifique ===
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=cipfaro_production

# === MinIO Configuration ===
MINIO_ROOT_USER=cipfaro-admin
MINIO_ROOT_PASSWORD=cipfaro-secret-key-123

# === Grafana ===
GF_SECURITY_ADMIN_PASSWORD=admin123

# === URLs de santé ===
HEALTH_CHECK_URL=http://localhost:3001/health