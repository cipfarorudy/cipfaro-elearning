# Configuration production pour LWS
# Copiez ce fichier vers .env.production et adaptez les valeurs

# Base de données PostgreSQL
POSTGRES_DB=cipfaro
POSTGRES_USER=cipfaro
POSTGRES_PASSWORD=CHANGEZ_MOI_AVEC_UN_MOT_DE_PASSE_SECURISE

# JWT Secret (générez une clé aléatoire sécurisée)
JWT_SECRET=CHANGEZ_MOI_AVEC_UNE_CLE_JWT_SECURISEE_DE_64_CARACTERES

# URLs de production
NEXT_PUBLIC_API_BASE_URL=https://cipfaro.fr/api
CORS_ORIGIN=https://cipfaro.fr

# Configuration Node.js
NODE_ENV=production
PORT_WEB=3000
PORT_API=3001

# Stockage des fichiers uploadés
UPLOAD_DIR=/app/uploads

# Configuration Redis (optionnel pour les sessions)
REDIS_URL=redis://redis:6379

# Configuration email (à adapter selon votre fournisseur)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre-email@gmail.com
SMTP_PASSWORD=votre-mot-de-passe-app
SMTP_FROM=noreply@cipfaro.fr

# Configuration de sauvegarde (optionnel)
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7