{
  "name": "cipfaro-elearning",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "start": "pnpm -r start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:demo": "tsx scripts/run-e2e-tests.ts tests/e2e/admin-demo.spec.ts",
    "test:e2e:all": "tsx scripts/run-e2e-tests.ts",
    "playwright:install": "playwright install",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "security:scan": "tsx scripts/security-scan.ts",
    "deploy:control": "tsx scripts/deploy-control.ts",
    "audit:fix": "pnpm audit --fix",
    "db:push": "pnpm --filter @cipfaro/api prisma db push",
    "db:migrate": "pnpm --filter @cipfaro/api prisma migrate deploy",
    "db:seed": "pnpm --filter @cipfaro/api prisma db seed"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra/*"
  ],
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.19",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "audit-ci": "^7.1.0",
    "eslint": "^9.36.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jest-environment-node": "^30.1.2",
    "jsdom": "^27.0.0",
    "playwright": "^1.55.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "tsx": "^4.16.2"
  }
}
